
\pset null NULL

-- set mysql style output
-- \pset border 2

-- show how long queries took
\timing on

\pset pager always

-- keep history on a per-db basis:
\set HISTFILE ~/.config/psql/history/psql_history- :DBNAME
\set HISTSIZE 15000

-- If a command is run more than once in a row, only store it once in the
-- history.
\set HISTCONTROL ignoredups

-- \set PROMPT1 '%[%033[1;35;35m%]%n@%M %/%[%033[0m%]% # '
\set PROMPT1 '%[%033[1;35;35m%]%n %/ %M%[%033[0m%]% # '

-- Autocomplete keywords (like SELECT) in upper-case, even if you started
-- typing them in lower case.
\set COMP_KEYWORD_CASE upper

-- Automatically switch to vertical display for wider result sets.
\x auto

-- Quit after 5 ctrl-d and not after 1.
-- \set IGNOREEOF 5

\set ON_ERROR_STOP on
